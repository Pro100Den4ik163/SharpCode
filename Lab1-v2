using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Lab
{
    class ProgLabZ1
    {
        public static void controls1()
        {
            Console.WriteLine("Вариант №9. Задание 1");
            Console.WriteLine("Описание");
            Console.WriteLine("Чтобы перейти к просмотру решения задачи нажмите Enter.");
            Console.ReadKey();

            Console.WriteLine("Введите значение x");
            int x = int.Parse(Console.ReadLine()); //Ввод с клавиатуры...
            Console.Write("Введённое значение");
            Console.WriteLine(" X=" + x);
            Console.WriteLine("Для того чтобы начать вычисление нажмите Enter...");
            Console.ReadKey();
            int rezA = x * x;
            int rezB = rezA * rezA;
            int rezC = rezB * rezB;
            Console.WriteLine("Возведение в квадрат");
            Console.WriteLine("Z1=" + rezA);
            Console.WriteLine("Возведение в 4 степень");
            Console.WriteLine("Z2=" + rezB);
            Console.WriteLine("Возведение в 8 Степень");
            Console.WriteLine("Z3=" + rezC);
            Console.WriteLine("Решение завершено. Для перехода к решению следующего задания нажмите Enter...");
            Console.Clear();
            //
            //
        }
        public static void controls2()
        {
            Console.WriteLine("Задание 2");
            Console.WriteLine("Описание");
            Console.WriteLine("---");
            Console.WriteLine("Чтобы перейти к просмотру решения задачи нажмите Enter.");
            Console.ReadKey();
            Console.WriteLine("Введите значение x");
            double x1 = double.Parse(Console.ReadLine()); //Ввод с клавиатуры...
            int c = (int)x1;
            double d = x1 - c; // вычисление дробной части.
            Console.Write("Введённое значение");
            Console.WriteLine(" X=" + x1);
            Console.WriteLine("Вывод первого знака после запятой");
            Console.WriteLine("{0:.0}", d);
            Console.WriteLine("Решение завершено. Для перехода к решению следующего задания нажмите Enter...");
            Console.ReadKey();
            Console.Clear();
            //
            //
        }
        public static void controls3()
        {
            Console.WriteLine("Задание 3");
            Console.WriteLine("Описание");
            Console.WriteLine("---");
            Console.ReadKey();


            Console.WriteLine("Решение завершено. Для перехода к решению следующего задания нажмите Enter...");
            Console.ReadKey();
            Console.Clear();
            //
            //
        }
        public static void controls4()
        {
            Console.WriteLine("Задание 4");
            Console.WriteLine("Описание");
            Console.WriteLine("---");
            Console.ReadKey();


            Console.WriteLine("Решение завершено. Для закрытия программы нажмите Enter...");
            Console.ReadKey();
        }
    }

    static void Main()
        {
            byte n0;
            Console.WriteLine("Выберите номер задания:");
            Console.WriteLine("1.Задание 1");
            Console.WriteLine("2.Задание 2");
            Console.WriteLine("3.Задание 3");
            Console.WriteLine("4.Задание 4");
            n0 = byte.Parse(Console.ReadLine());
            switch (n0);
            {
                case 1: controls1(); break;
                case 2: controls2(); break;
                case 3: controls3(); break;
                case 4: controls4(); break;
                default(): Console.Clear(); Main(); break;
            }
        }
        
}
